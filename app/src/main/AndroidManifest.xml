<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pivx.org.pivxwallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".PivxApplication">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ui.wallet_activity.WalletActivity"></activity>
        <activity android:name=".ui.address_activity.AddressActivity"></activity>
        <activity android:name=".ui.settings_activity.SettingsActivity"></activity>
        <activity android:name=".ui.settings_backup_activity.SettingsBackupActivity"></activity>
        <activity android:name=".ui.settings_restore_activity.SettingsRestoreActivity"></activity>
        <activity android:name=".ui.settings_pincode_activity.SettingsPincodeActivity"></activity>

        <activity android:name=".ui.start_activity.StartActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.restore_activity.RestoreActivity"></activity>
        <activity android:name=".ui.pincode_activity.PincodeActivity"
                android:windowSoftInputMode="stateVisible">

        </activity>

        <activity android:name=".ui.transaction_send_activity.SendActivity"></activity>
        <activity android:name=".ui.transaction_request_activity.RequestActivity"></activity>

    </application>

</manifest>