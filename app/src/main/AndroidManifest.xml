<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pivx.org.pivxwallet">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".PivxApplication">
        <activity android:name=".ui.splash_activity.SplashActivity"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.wallet_activity.WalletActivity">

        </activity>

        <activity android:name=".ui.start_activity.StartActivity">

        </activity>
        <activity android:name=".ui.contacts_activity.ContactsActivity"/>
        <activity android:name=".ui.settings_activity.SettingsActivity"/>
        <activity android:name=".ui.settings_backup_activity.SettingsBackupActivity"/>
        <activity android:name=".ui.settings_restore_activity.SettingsRestoreActivity" android:noHistory="true" />
        <activity android:name=".ui.settings_pincode_activity.SettingsPincodeActivity">

          
        </activity>

        <activity android:name=".ui.address_add_activity.AddContactActivity"/>
        <activity android:name=".ui.settings_network_activity.SettingsNetworkActivity"/>
        <activity android:name=".ui.settings_node_activity.SettingsNodeActivity"/>
        <activity android:name=".ui.start_node_activity.StartNodeActivity"/>
        <activity android:name=".ui.restore_activity.RestoreActivity"/>
        <activity android:name=".ui.pincode_activity.PincodeActivity">

        </activity>

        <activity android:name=".ui.transaction_send_activity.SendActivity"></activity>
        <activity android:name=".ui.transaction_request_activity.RequestActivity"></activity>
        <activity android:name=".ui.transaction_detail_activity.TransactionDetailActivity"></activity>
        <activity android:name=".ui.tutorial_activity.TutorialActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.qr_activity.QrActivity"/>
        <activity android:name=".utils.scanner.ScanActivity"/>

        <service android:name=".service.PivxWalletService" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="pivx.org.pivxwallet.myfileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

    </application>

</manifest>
