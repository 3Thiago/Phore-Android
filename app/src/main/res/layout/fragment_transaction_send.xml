<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bgWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pivx.org.pivxwallet.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar_login"
        app:theme="@style/ToolBarStyle"
        app:popupTheme="@style/AppTheme" />

    <include layout="@layout/fragment_transaction_inputs">

    </include>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="314dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_selector"
        android:elevation="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="trySend"
        android:text="@string/btn_send"
        android:textColor="@color/textColorPurple"
        android:textSize="14sp" />

</LinearLayout>