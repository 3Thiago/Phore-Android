<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:paddingLeft="16dp"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:background="#F0F0F0"
            android:text="@string/settings_subtitle_security"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_backup_wallet"
                android:background="@drawable/settings_items"
                android:stateListAnimator="@null"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#444444"
                android:text="@string/backup_wallet"/>
            <Button
                android:id="@+id/btn_restore_wallet"
                android:background="@drawable/settings_items"
                android:stateListAnimator="@null"
                android:padding="8dp"
                android:height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#444444"
                android:text="@string/restore_wallet"/>
            <Button
                android:id="@+id/btn_change_pincode"
                android:background="@drawable/settings_item_blank"
                android:stateListAnimator="@null"
                android:padding="8dp"
                android:height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#444444"
                android:text="@string/change_pincode"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:paddingLeft="16dp"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:background="#F0F0F0"
            android:text="@string/settings_subtitle_preference"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_local_currency"
                android:background="@drawable/settings_item_blank"
                android:stateListAnimator="@null"
                android:paddingLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#444444"
                android:text="@string/local_currency"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textColor="#929292"
                android:text="@string/local_currency_usd"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:paddingLeft="16dp"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:background="#F0F0F0"
            android:text="@string/settings_subtitle_about"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_network"
                android:background="@drawable/settings_items"
                android:stateListAnimator="@null"
                android:padding="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#444444"
                android:text="@string/network_monitor"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_version"
                />
            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.12"
                />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>